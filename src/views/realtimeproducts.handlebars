 <div class="container mt-5 p-3 mb-2 bg-secondary text-white "  >   
    <form class="row g-3 mx-4" id="formProduct">
        <h2 class="mb-4">AGREGAR PRODUCTO:</h2>

       
        <div class="col-md-6">
            <label for="title" class="form-label">Nombre del Producto</label>
            <div class="input-group">
                
                <input class="form-control" type="text" name="title" id="title" placeholder="Escribir nombre del producto..." required>
            </div>
        </div>

       
        <div class="col-md-6">
            <label for="description" class="form-label">Descripción</label>
            <div class="input-group">
            
                <input class="form-control" type="text" name="description" id="description" placeholder="Describir el producto..." required>
            </div>
        </div>

        
        <div class="col-md-6">
            <label for="stock" class="form-label">Stock</label>
            <div class="input-group">
                
                <input class="form-control" type="number" name="stock" id="stock" placeholder="Ej: 3" required>
            </div>
        </div>

       
        <div class="col-md-6">
            <label for="thumbnail" class="form-label">Imagen</label>
            <div class="input-group">
                
                <input class="form-control" type="text" name="thumbnail" id="thumbnail" placeholder="Ej: https://ejemplo.com/image.png" >
            </div>
        </div>

      
        <div class="col-md-6">
            <label for="category" class="form-label">Categoría</label>
            <div class="input-group">
            
                <input class="form-control" type="text" name="category" id="category" placeholder="Ej: Calzados.." required>
            </div>
        </div>

      
        <div class="col-md-6">
            <label for="price" class="form-label">Precio</label>
            <div class="input-group">
                
                <input class="form-control" type="number" name="price" id="price" placeholder="Ej: 5000" required>
            </div>
        </div>

       
        <div class="col-md-6">
            <div class="form-check mt-4">
                <input name="status" class="form-check-input" type="checkbox" value="true" id="flexCheckChecked" checked>
                <label class="form-check-label" for="flexCheckChecked">Status</label>
            </div>
        </div>

       
        <div class="col-md-6">
            <label for="code" class="form-label">Código</label>
            <div class="input-group">
                
                <input class="form-control" type="text" name="code" id="code" placeholder="Ej: as21" required>
            </div>
        </div>

       
        <div class="col-12 mt-4">
            <button class="btn btn-primary" type="submit" id="add-btn">Registrar </button>
        </div>

       
    </form>
     <div class="container mt-5 p-3 mb-2 bg-light text-dark ">  
        <h2 class="mt-4">ELIMINAR PRODUCTO:</h2>
          
            <div class="col-md-6">
                <label for="id-prod" class="form-label">ID del Producto</label>
                <div class="input-group">
                    
                    <input class="form-control" type="number" name="prod" id="prod" placeholder="Ej: eqwreqwrqwetsdsf">
                </div>
            </div>
           
            <div class="col-12 mt-4">
                <button class="btn btn-danger" type="button" name="delete" id="delete" >Eliminar</button>
            </div>
    </div>

        <div class="row mt-4" id="list-products"></div>
       
</div>      
